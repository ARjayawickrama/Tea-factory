 // Product_PDFReport.js
import jsPDF from 'jspdf';
import 'jspdf-autotable';

const generateProductPDF = (products) => {
  const doc = new jsPDF();
  
  doc.autoTable({
    head: [['Product', 'Manufacture Date', 'Expire Date', 'Weight', 'Units', 'Description']],
    body: products.map(product => [
      product.product,
      product.manufactureDate,
      product.expireDate,
      product.weight,
      product.units,
      product.description
    ])
  });
  
  doc.save('products.pdf');
};

export default generateProductPDF;
